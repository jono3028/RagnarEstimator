@{ ViewData["Title"] = "Create Roster"; }
<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="text-primary">Ragnar Relay Time Estimator</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10">
      <span class="text-secondary">Enter team member info</span>
    </div>
    <div class="col-sm-2">
      <a href="/CreateLaps" class="btn btn-primary float-right">Next <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span></a>
    </div>
  </div>
</div>
<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Pace</th>
        <th>Multiplyer</th>
        <th>Notes</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      @{ foreach (var runner in ViewBag.Runners) {
      <tr>
        <td>@runner.RunnerSequence</td>
        <td>@runner.NickName</td>
        <td>@runner.PaceFormatted()</td>
        <td>@runner.RunnerPaceMultiplyer</td>
        <td>@runner.RunnerNotes</td>
        <td>
          <a href="/#">Edit</a>
        </td>
      </tr>
      } }
    </tbody>
  </table>
</div>
<div class="container">
  <section class="container-fluid">
    <form action="/CreateRunner" method="POST">
      <div class="form-group">
        <label for="newRunnerName">Runner Name</label>
        <input type="text" class="form-control" name="newRunnerName">
        <label for="newRunnerPace">Pace</label>
        <input type="string" value="9:00" class="form-control" pattern="^[0-9]{1,2}:[0-9]{2}" name="newRunnerPace">
        <label for="newRunnerMultiplyer">Pace Multiplyer</label>
        <input type="number" step="0.01" value="1.00" class="form-control" name="newRunnerMultiplyer">
        <label for="newRunnerSequence">Sequence</label>
        <input type="number" step="1" class="form-control" name="newRunnerSequence">
      </div>
      <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Runner</button>
    </form>
  </section>
</div>