@{ ViewData["Title"] = "Create Course"; }
<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="text-primary">Ragnar Relay Time Estimator</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10">
      <span class="text-secondary">Enter race course segment info</span>
    </div>
    <div class="col-sm-2">
      <a href="/CreateRoster" class="btn btn-primary float-right">Next</a>
    </div>
  </div>
</div>
<div class="container">
  <section class="container-fluid">
    <form action="/CreateCourse" method="POST">
      <div class="form-group">
        <label for="newCourseDistance">Distance</label>
        <input type="text" class="form-control" id="newCourseDistance">
      </div>
      <div class="form-group">
        <label for="newCourseElevation">Elevation</label>
        <input type="text" class="form-control" id="newCourseElevation">
      </div>
      <div class="form-group">
        <label for="newCourseDifficulty">Difficulty</label>
        <select class="form-control" id="newCourseDifficulty">
          <option value="1">1 - Easy</option>
          <option value="2">2 - Medium</option>
          <option value="3">3 - Hard</option>
        </select>
      </div>
      <div class="form-group">
        <label for="newCourseSequence">Sequence</label>
        <input type="text" class="form-control" id="newCourseSequence">
      </div>
      <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Runner</button>
    </form>
  </section>
</div>